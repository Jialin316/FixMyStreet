
<!-- Inclue les metadata tel que le titre, le css, l'icone du site -->
<%- include('base/meta', {title: "Signaler"}) -%>

<body>
    <!-- Inclue la partie header -->
    <%- include('base/header') -%>

    <h1 style="text-align: center;">Signaler un Incendie</h1>

    <form action="/signal" method="POST" class="form-incident" style="max-width: 600px; margin: auto; padding: 1rem; border: 1px solid #ccc; border-radius: 8px; background: #f9f9f9;">



        <div class="form-group">
            <label for="description">Description de l'incendie :</label>
            <textarea id="description" name="description" required placeholder="Décrivez l'incendie..." rows="4" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 5px;"></textarea>
        </div>

        <div class="form-group" style="margin-top: 1rem;">
            <label for="date">Date de l'incendie :</label>
            <input type="date" id="date" name="date" required style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 5px;">
        </div>


        <div class="form-group" style="margin-top: 1rem;">
            <label for="lieu">Lieu de l'incendie :</label>
            <input type="text" id="lieu" name="lieu" required placeholder="Ex: Rue, Ville, Région" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 5px;">
        </div>


        <div class="form-group" style="text-align: center; margin-top: 1rem;">
            <button type="submit">
                Signaler l'incendie
            </button>
        </div>
    </form>
</body>
</html>